{
    "name": "Jirasol",
    "version": "0.1",
    "description": "Jira productivity tools",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "js/background_bundle.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/ironman.png"
        }
    },
    "content_scripts": [{
        "matches": [
            "*://*.atlassian.net/*"
        ],
        "js": [
            "js/jquery-3.4.1.min.js",
            "js/contentscript_bundle.js"
        ]
    }],
    "web_accessible_resources": [
        "js/pagescript_bundle.js",
        "css/pagestyle.css",
        "images/addnote.png"
    ],
    "manifest_version": 2
}