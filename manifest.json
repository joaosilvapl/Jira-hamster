{
    "name": "Jira hamster",
    "version": "0.1",
    "description": "Jira productivity tools",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "js/background_bundle.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [{
        "matches": [
            "*://*.atlassian.net/*"
        ],
        "js": [
            "js/jquery-3.4.1.min.js",
            "js/contentscript_bundle.js"
        ]
    }],
    "web_accessible_resources": [
        "js/pagescript_bundle.js",
        "css/pagestyle.css",
        "images/addnote.png"
    ],
    "commands": {
        "toggle-focus-mode": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "Toggle focus mode"
        },
        "toggle-highlight-1": {
            "suggested_key": {
                "default": "Ctrl+Shift+1",
                "mac": "Command+Shift+1"
            },
            "description": "Toggle highlight 1"
        },
        "toggle-highlight-2": {
            "suggested_key": {
                "default": "Ctrl+Shift+2",
                "mac": "Command+Shift+2"
            },
            "description": "Toggle highlight 2"
        },
        "toggle-highlight-3": {
            "suggested_key": {
                "default": "Ctrl+Shift+3",
                "mac": "Command+Shift+3"
            },
            "description": "Toggle highlight 3"
        }
    },
    "manifest_version": 2
}